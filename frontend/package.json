{
  "name": "react-ts-wp-scss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check-types": "tsc --noEmit --skipLibCheck",
    "lint-fix": "eslint --fix --ext .js,.ts,.tsx .",
    "lint:frontend": "eslint . --ext .js,.ts,.tsx",
    "stylelint-fix": "stylelint \"**/*.scss\" --fix",
    "stylelint": "stylelint \"**/*.scss\"",
    "webpack:serve": "webpack-cli serve --mode=development --env development --open --hot",
    "dev:backend": "cd ../backend && source .venv/bin/activate && uvicorn main:app --reload",
    "dev": "npm-run-all -p webpack:serve dev:backend",
    "build": "NODE_ENV=production webpack --mode=production --env production --progress",
    "build:test": "NODE_ENV=test webpack --mode=production --env production --progress",
    "analyze": "STATS=server webpack --mode=production --profile",
    "json-server": "npx json-server --watch db.json -m ./node_modules/json-server-auth",
    "create-users": "node users.js",
    "prepare": "cd .. && husky install",
    "serve:build": "serve -s build -p 3001",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:e2e": "npm-run-all -p -r  serve:build json-server cypress:run",
    "build:serve": "npm run build:test && npm run serve:build",
    "create:serve": "npm run create-users && npm run json-server",
    "test:local": "npm-run-all -p -r build:serve create:serve cypress:open",
    "test:backend": "cd ../backend && source .venv/bin/activate && ENV=test PYTHONPATH=. pytest -v",
    "lint:backend": "cd ../backend && source .venv/bin/activate && black ./"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.6.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "cypress": "^12.4.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "fork-ts-checker-webpack-plugin": "^7.2.14",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.2",
    "json-server": "^0.17.1",
    "json-server-auth": "^2.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "sass": "^1.56.2",
    "sass-loader": "^13.2.0",
    "serve": "^14.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
